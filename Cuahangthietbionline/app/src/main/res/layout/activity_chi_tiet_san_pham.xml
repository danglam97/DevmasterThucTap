<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietSanPham">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    app:title="Chi Tiết Sản Phẩm"
    android:background="@drawable/custom_background_play_nhac"
    app:titleTextColor="#000000"
    android:id="@+id/toolbarchitietsanpham"
    android:layout_height="?attr/actionBarSize">

</androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageviewchitetsanpham"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Ten San Pham"
                android:id="@+id/textviewtenchitietsanpham"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f20"
            android:text="Gia san pham"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:id="@+id/textviewgiachitietsanpham"/>
            <Spinner
                android:padding="15dp"
                android:layout_margin="3dp"
                android:background="@drawable/spinner"
                android:layout_width="match_parent"
                android:id="@+id/spinner"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

            </Spinner>
            <Button
                android:background="@drawable/backgrondbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ hàng"
                android:textSize="15sp"
                android:textColor="#000000"
                android:id="@+id/buttondatmua"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="Thông số sản shẩm"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </TextView>
        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textviewmotachitietsanpham"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>