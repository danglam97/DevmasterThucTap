<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="7dp"
        android:id="@+id/realativealbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện Thoại Hot"
            android:id="@+id/textviewtitlealbum"
            android:textColor="#f20"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textviewxemthemdienthoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Thêm"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textColor="#2C1B1B"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewdienthoaihot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/realativealbum"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:background="#DAD5D5">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>